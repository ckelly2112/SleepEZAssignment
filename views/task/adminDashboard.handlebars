<section class="dashboard">
    <div class="backgroundImage" id="adminBackground"></div>
    <h1>Admin Dashboard</h1>
    <h2>{{user.firstName}} {{user.lastName}}</h2>
    <br>
    <a href="/task/addRoom" class="controlButton" id="addRoomButton">Add Room</a><br><br><br>
    {{#each room}}
    <image height="100px" width="100px" src="/uploads/{{this.roomPicture}}"></image>
    <h2 id="roomTitle">{{this.roomTitle}}</h2>
    <a href="/task/editRoom/{{this._id}}" class="controlButton">Edit</a>
    <form action="/task/delete/{{this._id}}?_method=DELETE" method="POST" id="deleteRoomForm">
    <input type="submit" value="Remove" class="controlButton" id="deleteButton" data-id="{{this.id}}" data-title="{{this.title}}">
    </form>
    <br><br>
    {{/each}}
  <h2>Rooms Booked:</h2>
  <a href="/task/deleteBookings" class="controlButton">REMOVE ALL BOOKINGS</a>
     {{#each bookings}}
    <div class="rooms">
        <img height="200px" width="200px"src="../uploads/{{this.roomPicture}}" alt="{{this.roomTitle}}">
        <h4>{{this.roomTitle}}/{{this.roomLocation}}</h4>
        <p>${{this.roomPrice}}/night</p>
    </div>
{{/each}}
</section>